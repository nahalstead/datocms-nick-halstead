<!DOCTYPE html>
<html lang="<%= settings.language %>">
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= settings.name %></title>
    <script src="https://kit.fontawesome.com/bd767aa32b.js" crossorigin="anonymous"></script>
    <% if (environment === 'production') { %>
      <link rel="stylesheet" href="/assets/all.css">
    <% } %>
    <% settings.faviconMetaTags.forEach(tag => { %>
      <%- tagGenerator(tag) -%>
    <% }) %>
    <% if (seoMetaTags) { %>
      <% seoMetaTags.forEach(tag => { %>
        <%- tagGenerator(tag) -%>
      <% }) %>
    <% } %>
  </head>
  <body class="<%= path === 'index.html' ? 'is-active' : '' %> gallery">
    <div class="container">
      <div id="menu" class="menu">
<!--         <div class="sidebar"> -->
          <h1 class="logo menu-logo">
            <a id="logo" class="logo text" href="/index.html"><%= settings.name %></a>
          </h1>

          <ul class="menu-nav">
            <li class="<%= path === 'index.html' ? 'is-active' : '' %> item">
              <a href="/">Home</a>
            </li>
            <li class="<%= path === 'index.html' ? 'is-active' : '' %> item">
              <a href="/#">Works</a>
            </li>
            
            <ul class="submenu">
              <% works.forEach((work, index) => { %>
                <li class="<%= path === 'work.path' ? 'is-active' : '' %> item">
                  <a href="/<%= work.path %>"><%= work.title %></a>
                </li>
              <% }) %>
            </ul>
            
            <li class="<%= path === 'about.html' ? 'is-active' : '' %> item">
              <a href="/about.html">About</a>
            </li>
          </ul>

          <a href="#!" class="mobile-menu-open-button">
            <i class="mobile-menu-open-button-icon"></i>
          </a>

          <p class="sidebar__social">
            <% settings.socialProfiles.forEach(profile => { %>
              <a href="<%= profile.url %>" class="social social--<%= profile.type %>"></a>
            <% }) %>
          </p>

          <div class="sidebar__copyright">
            <%= settings.copyright %>
          </div>

        <!-- </div> -->
      </div>

      <div class="mobile-menu">
        <div class="mobile-menu-overlay"></div>
        <div class="mobile-menu-panel">
          <div class="mobile-menu-links">
            <a href="/">Home</a>
            <a href="/#">Works</a>
            <% works.forEach((work, index) => { %>
               <a href="/<%= work.path %>"><%= work.title %></a>
            <% }) %>
          </div>
          <div class="mobile-menu-social-links">
            <div id="social" class="social">
              <ul>
                <% settings.socialProfiles.forEach(profile => { %>
                  <li>
                    <a href="<%= profile.url %>" class="social social--<%= profile.type %>"></a>
                  </li>
                <% }) %>
              </ul>
            </div>
          </div>
          <a href="#!" class="mobile-menu-close-button" style="top: 20px;">
            <svg width="19px" height="19px" viewBox="0 0 19 19" version="1.1" xmlns="http://www.w3.org/2000/svg">
                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                    <path d="M9.5,7.38888889 L2.11111111,-3.01980663e-14 L-2.30926389e-14,2.11111111 L7.38888889,9.5 L-2.13162821e-14,16.8888889 L2.11111111,19 L9.5,11.6111111 L16.8888889,19 L19,16.8888889 L11.6111111,9.5 L19,2.11111111 L16.8888889,-3.01980663e-14 L9.5,7.38888889 Z" fill="#222222"></path>
                </g>
            </svg>
          </a>
        </div>
      </div>
